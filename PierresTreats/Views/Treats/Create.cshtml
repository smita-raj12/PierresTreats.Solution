@{
  Layout = "_Layout";
}

@model PierresTreats.Models.Treat

<h4>Add a new Treat</h4>

@using (Html.BeginForm())
{
  <div class = "container">
    @Html.LabelFor(model => model.Name, new { @class = "text", type = "text", required = "required" })
    @Html.TextBoxFor(model => model.Name, new { @class = "text", type = "text", required = "required" })

    <input type="submit" value="Add new treat" class="btn btn-default" />
  </div>  
}
<p>@Html.ActionLink("Show all Treats", "Index")</p>